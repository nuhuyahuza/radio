# Database Configuration
DB_HOST=db
DB_PORT=3306
DB_NAME=zaa_radio
DB_USER=zaa_radio
DB_PASSWORD=zaa_radio_password

# Application Configuration
APP_NAME="Zaa Radio Booking System"
APP_URL=http://localhost:8080
APP_ENV=development
APP_DEBUG=true
APP_TIMEZONE=UTC

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_NAME="Zaa Radio"
MAIL_FROM_ADDRESS=noreply@zaaradio.com
MAIL_ENCRYPTION=tls

# Security
JWT_SECRET=your-super-secret-jwt-key-here
CSRF_SECRET=your-csrf-secret-key-here
SESSION_LIFETIME=3600

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# File Uploads
UPLOAD_MAX_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# Rate Limiting
RATE_LIMIT_LOGIN=5
RATE_LIMIT_BOOKING=10

# Export Settings
EXPORT_PATH=exports/
PDF_FONT_PATH=vendor/dompdf/dompdf/lib/fonts/

# Station Configuration
STATION_NAME="Zaa Radio"
STATION_ID=1
STATION_TIMEZONE=UTC
